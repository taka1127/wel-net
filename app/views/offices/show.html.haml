.contents
  = render 'offices/shared/user_header'
  .contents__name
    = @office_name
    さんの投稿一覧
  .contents__post
    = render 'offices/side_bar'
    - @informations.each do |information|
      .contents__post__content
        = simple_format(information.text)
        .contents__post__content__image
          = image_tag information.image.url,size:250
          .contents__post__date
            %p= information.created_at.strftime("%Y年%m月%d日の投稿")
            
