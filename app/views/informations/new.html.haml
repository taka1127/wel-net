.contents
  = render 'offices/shared/user_header'
  .contents__header
    事業所紹介・入力フォーム
  .contents__containaer
    = form_with(model:@information, url:informations_path,metod: :post,local: true, class:"form" )  do |form|
      = form.text_field :name,placeholder: "事業所名を入力して下さい" ,class:"text_field"
      = form.text_field :office_tel, placeholder: "電話番号", class: "text_field"
      = form.text_field :postal_code, placeholder: "郵便番号", class: "text_field"
      = form.text_field :prefecture, placeholder: "都道府県名を入力してください（例）滋賀県", class: "text_field"
      = form.text_field :city, placeholder: "市町村名を入力してください（例）大津市", class: "text_field"
      = form.text_field :house_number, placeholder: "番地", class: "text_field"
      = form.file_field :image, placeholder: "画像のurlを貼り付けてください", class: "text_field"
      = form.text_area :text, placeholder: "・事業所の紹介\n・事業所の特色\n・空き情報\n・アピールポイント\nなどを入力して下さい" ,class:"text_area"
      = form.submit "送信", class: "send"

