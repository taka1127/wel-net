.edit_contents
  = render 'offices/shared/user_header'
  .edit_contents__header
    編集フォーム
  .edit_contents__container
    = form_with(model: @information, url:".",local: true)  do |form|
      = form.file_field :image, placeholder: "画像のurlを貼り付けてください", class: "text_field"
      = form.text_area :text, placeholder: "・事業所の紹介\n・事業所の特色\n・空き情報\n・アピールポイント\nなどを入力して下さい" , rows: "10",class:"text_area"
      = form.submit "変更する", class: "send"
