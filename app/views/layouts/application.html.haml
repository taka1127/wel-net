!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Wel-Net
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    %link{href: "//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css", rel: "stylesheet", type: "text/css"}/
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %script{src: "//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js", type: "text/javascript"}

    -# = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    -# = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %body
  %header.header
    .header__title
      = link_to "Wel-Net", root_path, class: "header__title--text"
    .header__right
    - if user_signed_in?
      .header__right__user
        = link_to "利用者様ログアウト", destroy_user_session_path, method: :delete, class: "header__right--user"
    - else
      .header__right__user
        = link_to "利用者様ログイン", user_session_path, class: "header__right--user"
        = link_to "新規登録", new_user_registration_path, class: "header__right--user"

    - if user_signed_in?
      .header__right__office
        = link_to "事業所様ログアウト", destroy_office_session_path, class: "header__right--office"
        = link_to "事業所登録", "/informations#new", class: "header__right--office"
    - else
      .header__right__office
        = link_to "事業所様ログイン", office_session_path, class: "header__right--office"
        = link_to "新規登録", new_office_registration_path, class: "header__right--office"
  .contents
    = yield

