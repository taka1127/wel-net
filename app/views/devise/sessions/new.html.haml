.account.row
  .container
    %h2 ログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .fields
        = f.label :メールアドレス ,class:"field"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email" ,class:"field"
      .fields
        = f.label :パスワード ,class:"field"
        %br/
        = f.password_field :password, autocomplete: "current-password" ,class:"field"
      -# - if devise_mapping.rememberable?
      -#   .field
      -#     = f.check_box :remember_me
      -#     = f.label :remember_me
      .actions
        = f.submit "ログイン"  ,class:"sub" 
    = render "devise/shared/links"
